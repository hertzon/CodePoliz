<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.coltrack.codigopolicia.RegistroComparendo">

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/layout_bg"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageButton2"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/exit"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/back"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp" />

        <ExpandableListView
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:id="@+id/ExpandableListView01"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/textView9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Personas"
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="28dp"
            android:textColor="#114D2B"
            android:layout_marginTop="35dp" />

        <EditText
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:background="@drawable/roundeditxt"
            android:id="@+id/editText_cedula"
            android:hint="Ingrese o escanee el documento"
            android:gravity="center"
            android:cursorVisible="false"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/ExpandableListView01"
            android:layout_alignStart="@+id/ExpandableListView01" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Numero de Documento"
            android:id="@+id/textView2"
            android:textSize="22dp"
            android:textColor="#114D2B"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/ExpandableListView01"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Escanear"
            android:id="@+id/textView7"
            android:textSize="28dp"
            android:textColor="#114D2B"
            android:layout_below="@+id/editText_cedula"
            android:layout_alignRight="@+id/textView6"
            android:layout_alignEnd="@+id/textView6"
            android:layout_marginTop="20dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_escanear"
            android:layout_marginTop="1dp"
            android:background="@drawable/escanner"
            android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Buscar"
            android:id="@+id/textView8"
            android:textSize="28dp"
            android:textColor="#114D2B"
            android:layout_below="@+id/button_escanear"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton4"
            android:background="@drawable/searchpeople"
            android:layout_below="@+id/textView8"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Seleccione tipo de documento"
            android:id="@+id/textView9"
            android:textSize="22dp"
            android:textColor="#114D2B"
            android:layout_below="@+id/textView6"
            android:layout_alignLeft="@+id/ExpandableListView01"
            android:layout_alignStart="@+id/ExpandableListView01"
            android:layout_marginTop="29dp" />

    </RelativeLayout>

</RelativeLayout>
