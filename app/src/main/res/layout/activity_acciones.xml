<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.coltrack.codigopolicia.Acciones">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton_salir"
            android:id="@+id/gridLayout"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/imgbtn_personas"
                android:text="@string/button_personas"
                android:gravity="center"
                android:background="@drawable/buttonshape"
                android:textColor="#FFFFFF"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView

                android:id="@+id/imgbtn_tamir"
                android:text="@string/button_tamir"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_row="2"
                android:layout_column="0"
                android:background="@drawable/buttonshape"
                android:layout_marginTop="20dp"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/button_vehiculos"
                android:id="@+id/imgbtn_vehiculos"
                android:gravity="center"
                android:layout_row="0"
                android:textColor="#FFFFFF"
                android:layout_column="1"
                android:background="@drawable/buttonshape"
                android:layout_margin="0dp"
                android:layout_marginLeft="50dp" />



            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imgbtn_imeis"
                android:text="@string/button_imeis"
                android:layout_row="4"
                android:textColor="#FFFFFF"
                android:layout_column="0"
                android:gravity="center"
                android:background="@drawable/buttonshape"
                android:layout_marginTop="20dp" />



            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imgbtn_contacto"
                android:text="@string/button_contacto"
                android:layout_row="2"
                android:textColor="#FFFFFF"
                android:layout_column="1"
                android:gravity="center"
                android:background="@drawable/buttonshape"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imgbtn_procedimientos"
                android:text="@string/button_procedimientos"
                android:layout_row="4"
                android:textColor="#FFFFFF"
                android:layout_column="1"
                android:gravity="center"
                android:background="@drawable/buttonshape"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imgbtn_codigo"
                android:text="@string/button_codigo"
                android:layout_row="5"
                android:textColor="#FFFFFF"
                android:layout_column="0"
                android:gravity="center"
                android:background="@drawable/buttonshape"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imgbtn_salir"
                android:text="@string/button_salir"
                android:layout_row="5"
                android:textColor="#FFFFFF"
                android:layout_column="1"
                android:gravity="center"
                android:background="@drawable/buttonshape"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp" />



        </GridLayout>

    </RelativeLayout>
</RelativeLayout>
